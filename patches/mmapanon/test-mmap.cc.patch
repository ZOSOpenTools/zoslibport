+#include "zos.h"
+#include "gtest/gtest.h"
+#include <libgen.h>
+#include <sys/mman.h>
+
+namespace {
+
+TEST(NewFunctionsTest, AnonymousMMapAndMUNMapLeakDetection) {
+  //
+  // Ensure I can map / unmap quite a few times without exhausting storage
+  // (i.e. no memory leak) 
+  char* memory;
+
+  for (int i=0; i<100; ++i) {
+    // allocate 1GB and then update a byte on the start and end, 
+    // then delete and repeat
+    memory = mmap(0, 1<<19, PROT_READ|PROT_WRITE, MAP_PRIVATE|MAP_ANONYMOUS, -1, 0);
+    EXPECT_STRNE(memory, NULL);
+    memory[0] = memory[1<<19 -1] = 'X';
+
+    munmap(memory, 1<<19);
+  }
+
+} // namespace
